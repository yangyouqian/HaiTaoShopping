<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTablayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/tab_text_normal</item>
    </style>

</resources>
