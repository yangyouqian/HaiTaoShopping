<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bishe.haitaoshopping.home.JoinShopActivity">

    <com.bishe.haitaoshopping.component.titlebar.TitleBar
        android:id="@+id/join_shop_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#505050"
            android:textSize="14sp"
            android:text="数量"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#505050"
            android:textSize="14sp"
            android:text="商品名"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#505050"
            android:textSize="14sp"
            android:text="价格"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#505050"
            android:textSize="14sp"
            android:text="库存"/>
    </LinearLayout>

    <View
        android:id="@+id/shop_detail_show_price_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cacaca"/>

    <LinearLayout
        android:id="@+id/join_shop_show_price_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#505050"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:text="其他"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12sp"
            android:hint="输入色号"
            android:paddingLeft="5dp"
            android:background="@drawable/create_shop_et_bg" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:hint="输入数量"
            android:paddingLeft="5dp"
            android:background="@drawable/create_shop_et_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_confirm_join"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:text="确认参与"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="#d43030"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="请考虑清楚再点击参与哦\n适当剁手才有益身心健康\n平台不负责交易后果"
        android:textColor="#505050"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/create_shop_et_bg"
        android:layout_gravity="center"/>

</LinearLayout>
