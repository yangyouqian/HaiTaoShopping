<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/item_join_iv_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:src="@drawable/icon_add" />

    <TextView
        android:id="@+id/item_join_tv_choose_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="#505050"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_join_tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Mocha"
        android:textColor="#505050"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_join_tv_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="110"
        android:textColor="#505050"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_join_tv_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="#505050"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/item_join_iv_less"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:src="@drawable/icon_less" />
</LinearLayout>